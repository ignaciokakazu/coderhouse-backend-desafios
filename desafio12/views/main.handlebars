    <div class="container">
        <h3>Carga de productos</h3>
        <form onsubmit="return addMessage(this)" method="post">
            <div class="form-group">
                <label>Title</label>
                <input id="title" class="form-control">
            </div>
            <div class="form-group">
                <label>Price</label>
                <input id="price" class="form-control">
            </div>
            <div class="form-group mb-3">
                <label>Thumbnail</label>
                <input id="thumbnail" class="form-control">
            </div>
            <input class="btn btn-success" type="submit" value="Guardar">
            <a class="btn btn-success" href="/productos/vista">Vista</a>
        </form>
       
        <div id="tablaProductos">
                {{#if productos}}
                <table class='table'>
                    <tr>
                        <thead>
                            <th scope='col'>Producto</th>
                            <th scrope='col'>Precio</th>
                            <th scope='col'>Imagen</th>
                        </thead>
                    </tr>
                        {{#each productos}}
                        <tr>
                        <td>{{title}}</td>
                        <td>{{price}}</td>
                        <td><img src='{{thumbnail}}' width="50px"></td>
                        </tr>
                        {{/each}}
                </table>
                {{else}}
                <div class="card">
                    <div class="card-text">
                        <h2>No se encontraron productos</h2>
                    </div>
                </div>
                {{/if}}
            
        </div>

        <script src="/socket.io/socket.io.js"></script>
        <script src="main.js"></script>
    </div>
